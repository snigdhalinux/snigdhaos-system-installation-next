#!/bin/bash
#set -e

# Author	:	Erik Dubois
# Website	:	https://www.erikdubois.be

# Modifie by : Eshan Roy <src.eshan@gmail.com>
# Web : https://eshanized.github.io

echo
echo "#################################"
echo "Start snigdhaos-all-cores"
echo "#################################"
echo

corecount=$(grep -c ^processor /proc/cpuinfo)

if [ $corecount -gt 1 ]
then
        echo "You have " $corecount" cores."
        echo "Changing the makeflags for "$corecount" cores."
        sudo sed -i 's/#MAKEFLAGS="-j2"/MAKEFLAGS="-j'$(($corecount+1))'"/g' /etc/makepkg.conf;
        echo "Changing the compression settings for "$corecount" cores."
        sudo sed -i 's/COMPRESSXZ=(xz -c -z -)/COMPRESSXZ=(xz -c -z - --threads=0)/g' /etc/makepkg.conf
        sudo sed -i 's/COMPRESSZST=(zstd -c -z -q -)/COMPRESSZST=(zstd -c -z -q - --threads=0)/g' /etc/makepkg.conf
        sudo sed -i "s/PKGEXT='.pkg.tar.xz'/PKGEXT='.pkg.tar.zst'/g" /etc/makepkg.conf
else
        echo "No change."
fi
echo
echo "#################################"
echo "End snigdhaos-all-cores"
echo "#################################"
echo
