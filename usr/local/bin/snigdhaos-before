#!/bin/bash
echo "#################################"
echo "Start snigdhaos-before"
echo "#################################"
echo
echo "#################################"
echo "Set crontab"
echo "#################################"
echo
systemctl enable cronie.service
echo
echo "#################################"
echo "Copy grub Snigdha OS Grub theme (archiso deletes /boot when making the ISO)"
echo "#################################"
echo
mkdir -p /boot/grub/themes
cp -Rf /usr/share/grub/themes/snigdhaos-grub-theme /boot/grub/themes/
echo
echo "#################################"
echo "Changing into our own linux.preset"
echo "#################################"
echo
mv /etc/mkinitcpio.d/snigdhaos /etc/mkinitcpio.d/linux.preset
echo
echo "#################################"
echo "End snigdhaos-before"
echo "#################################"
echo
